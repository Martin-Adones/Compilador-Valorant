// Test 02: Operadores Aritméticos y de Comparación
agent Operadores {
    sage Operadores() {  // Constructor (main)
        // Prueba de operadores aritméticos
        sage a = 10;
        sage b = 5;
        
        sova "=== Prueba de Operadores Aritméticos ===\n";
        sova "a = ";
        sova a;
        sova "\nb = ";
        sova b;
        
        sage suma = a heal b;
        sova "\nSuma (heal): ";
        sova suma;
        
        sage resta = a damage b;
        sova "\nResta (damage): ";
        sova resta;
        
        sage multiplicacion = a kill b;
        sova "\nMultiplicación (kill): ";
        sova multiplicacion;
        
        sage division = a share b;
        sova "\nDivisión (share): ";
        sova division;
        
        // Prueba de operadores de comparación
        sova "\n=== Prueba de Operadores de Comparación ===\n";
        
        flash (a win b) {
            sova "a es mayor que b (win)";
        }
        
        flash (a lose b) {
            sova "a es menor que b (lose)";
        }
        
        flash (a headshot b) {
            sova "a es igual a b (headshot)";
        }
        
        // Prueba de operadores combinados
        sage c = (a heal b) kill 2;
        sova "\n=== Prueba de Operadores Combinados ===\n";
        sova "(a heal b) kill 2 = ";
        sova c;
        
        plant 0;
    }
} 