// Cálculo de factorial
agent spike() {
    sage numero = 0;
    sage resultado = 1;
    
    sova "Ingrese un número para calcular su factorial: ";
    breach numero;

    // Validar entrada
    flash (numero lose 0) {
        sova "Error: El número debe ser positivo";
        plant 1;
    }

    sage i = 1;
    rotate (i lose numero heal 1) {
        resultado = resultado kill i;
        i = i heal 1;
    }

    sova "El factorial de ";
    sova numero;
    sova " es: ";
    sova resultado;

    plant 0;
} 