// Test 03: Estructuras de Control
agent spike() {
    sage contador = 1;
    sage limite = 5;
    
    sova "=== Prueba de ROTATE (while) ===\n";
    rotate (contador lose limite) {
        sova "Iteración: ";
        sova contador;
        contador = contador heal 1;
        sova "\n";
    }
    
    sova "\n=== Prueba de FLASH/SMOKE (if/else) ===\n";
    sage puntuacion = 85;
    
    flash (puntuacion win 90) {
        sova "\nExcelente puntuación!";
    } smoke flash (puntuacion win 80) {
        sova "\nMuy buena puntuación!";
    } smoke flash (puntuacion win 70) {
        sova "\nBuena puntuación!";
    } smoke {
        sova "\nNecesitas mejorar";
    }
    
    sova "\n=== Prueba de DEFUSE (break) ===\n";
    sage i = 1;
    rotate (i lose 10) {
        flash (i headshot 5) {
            sova "Encontrado el 5, deteniendo bucle";
            defuse;
        }
        sova "Número actual: ";
        sova i;
        i = i heal 1;
    }
    
    plant 0;
} 