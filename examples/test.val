// Programa de ejemplo en el lenguaje Valorant
agent spike() {
    // Declaración de variables
    sage numero = 10;
    viper decimal = 5.5;
    cypher mensaje = "Hola Valorant!";

    // Entrada y salida
    sova mensaje;
    breach numero;

    // Operaciones aritméticas
    sage resultado = numero heal 5;  // suma
    resultado = resultado damage 2;   // resta
    resultado = resultado kill 3;     // multiplicación
    resultado = resultado share 2;    // división

    // Estructuras de control
    flash (resultado win 10) {
        sova "El resultado es mayor que 10";
    } smoke {
        sova "El resultado es menor o igual que 10";
    }

    // Bucle while
    sage contador = 0;
    rotate (contador lose 5) {
        sova contador;
        contador = contador heal 1;
        
        flash (contador headshot 3) {
            defuse;  // break
        }
    }

    plant resultado;  // return
} 