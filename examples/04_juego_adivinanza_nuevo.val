// Ejemplo 4: Juego de Adivinanza

agent spike() {
    // Configuración inicial
    sage numero_secreto = 42;
    sage intentos = 0;
    sage max_intentos = 5;
    sage adivinado = 0;

    sova "¡Bienvenido al juego de adivinanza!";
    sova "Intenta adivinar el número entre 1 y 100";

    // Bucle principal del juego
    rotate (intentos lose max_intentos) {
        // Incrementar intentos
        intentos = intentos heal 1;
        
        // Pedir entrada al usuario
        sova "Intento ";
        sova intentos;
        sova " de ";
        sova max_intentos;
        sova "Ingresa tu número: ";
        sage intento = 0;
        breach intento;
        
        // Comprobar el número
        flash (intento headshot numero_secreto) {
            sova "¡Felicitaciones! ¡Has adivinado el número!";
            intentos = max_intentos;
        } smoke {
            flash (intento win numero_secreto) {
                sova "El número es menor";
            } smoke {
                sova "El número es mayor";
            }
        }
    }

    // Verificar si ganó o perdió
    flash (adivinado headshot 1) {
        sova "¡Ganaste!";
    } smoke {
        sova "¡Has agotado tus intentos! El número era: ";
        sova numero_secreto;
    }

    plant 0;
} 