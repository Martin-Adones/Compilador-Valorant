// Test 06: Concatenación de Strings
agent spike() {
    // Prueba de concatenación básica
    cypher nombre = "Agente";
    cypher apellido = "Valorant";
    cypher nombre_completo = nombre heal apellido;
    
    sova "=== Prueba de Concatenación Básica ===";
    sova nombre_completo;
    
    // Prueba de concatenación con números
    sage nivel = 42;
    cypher info = "Nivel" heal nivel;
    
    sova "\n=== Prueba de Concatenación con Números ===";
    sova info;
    
    // Prueba de concatenación con decimales
    viper precision = 98.5;
    cypher stats = "Precisión" heal precision;
    
    sova "\n=== Prueba de Concatenación con Decimales ===";
    sova stats;
    
    // Prueba de concatenación múltiple
    cypher mensaje = "Agente" heal nivel heal "con precisión" heal precision;
    
    sova "\n=== Prueba de Concatenación Múltiple ===";
    sova mensaje;
    
    // Prueba de concatenación con entrada
    cypher nuevo_agente;
    sage nuevo_nivel;
    
    sova "\n=== Prueba de Concatenación con Entrada ===";
    sova "Ingresa el nombre del agente: ";
    breach nuevo_agente;
    
    sova "Ingresa el nivel del agente: ";
    breach nuevo_nivel;
    
    cypher ficha = nuevo_agente heal nuevo_nivel;
    sova "\nFicha del agente: ";
    sova ficha;
    
    plant 0;
} 